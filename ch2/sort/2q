#include <stdio.h>

int binsearch(int x, int arr[], int n);

int main(void){
	int hell[100];
	int i = 0, g=1;
	for(; i < 100; ++i){
		hell[i] = g+(i+1);
		g = hell[i];
		printf("%d \n", g);
	}

	printf("\n%d\n", binsearch(2557, hell, i-1));
}

int binsearch(int x, int arr[], int n){
	int low = 0, mid, high = n-1;

	while(low <= high){
		mid = (low+high) / 2;
		
		if(x <= arr[mid]) {
			printf("in \n");
			high = mid - 1;
		} else if (x > arr[mid]) {
			low = mid + 1;
		} else {
			return mid;
		}
	}

	return -1;
}
